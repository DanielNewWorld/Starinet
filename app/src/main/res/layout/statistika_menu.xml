<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="В этом разделе можно получить следуюшую информацию:"
            android:id="@+id/textView7"
            android:textColor="@color/myBlack"
            android:textStyle="bold" />

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- информацию по платежам на лицевой счет;"
            android:id="@+id/textView10"
            android:textColor="@color/myBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- информацию по списаниям средств с лицевого счета;"
            android:id="@+id/textView13"
            android:textColor="@color/myBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - системные события (блокировки, смены тарифов, активации услуг и т.д.)"
            android:id="@+id/textView17"
            android:textColor="@color/myBlack" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/internet_sub"
                    android:src="@drawable/money_green"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Платежи"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ip_sub"
                    android:src="@drawable/money_red"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Списания"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/system_sub"
                    android:src="@drawable/info"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="События"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>