<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/speed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заказ тарифного плана"
                android:id="@+id/txtAccountIDActive"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/myGreen"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp" />

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вы имеете возможность самостоятельно подать заявку на смену своего текущего тарифного плана на этой странице. "
                android:id="@+id/textView47"
                android:textColor="@color/myBlack"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="До окончания текущего месяца Вы можете выбирать любой тариф необходимое количество раз."
                android:id="@+id/textView48"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если в течение текущего месяца Вы передумали менять тариф, Вы можете заново выставить свой текущий тариф и смены тарифного плана не произойдет. "
                android:id="@+id/textView50"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обратите внимание, что для успешной смены тарифного плана или для продолжения использования текущего тарифа, сумма на Вашем счету на первое число месяца должна быть достаточной для снятия ежемесячного обязательного платежа. "
                android:id="@+id/textView51"
                android:layout_marginLeft="10dp"
                android:textColor="@color/myBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если на начало нового месяца суммы на Вашем счету будет не достаточно для снятия ежемесячного платежа, то заявка на смену тарифного плана будет снята и тариф изменен не будет. "
                android:id="@+id/textView52"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Поэтому внимательно следите за состоянием Вашего лицевого счета на конец месяца."
                android:id="@+id/textView53"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Стандартно смена тарифного плана осуществляется системой автоматически 1-го числа следующего месяца"
                android:id="@+id/textView73"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/myBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="С текущими тарифными планами можно ознакомиться на главном сайте в разделе &quot;Тарифы --> Безлимитные тарифные планы&quot;"
                android:id="@+id/textView74"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/myBlack" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Архивные тарифы можно посмотреть в разделе &quot;Тарифы --> Безлимитные тарифные планы --> Архивные тарифные планы&quot;"
                android:id="@+id/textView75"
                android:textColor="@color/myBlack"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текущий тарифный план"
                android:id="@+id/textView15"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/myBlack"
                android:paddingLeft="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Название тарифа"
                        android:id="@+id/textView16"
                        android:layout_column="0"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtNameTarif" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Стоимость, грн/месяц"
                        android:id="@+id/textView18"
                        android:layout_column="0"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtCost" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Всего, грн"
                        android:id="@+id/textView76"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:id="@+id/txtVsego" />

                </TableRow>

            </TableLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Для того чтобы подать заявку на смену тарифа:"
                    android:id="@+id/textView35"
                    android:layout_column="2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/myBlack" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Выберите нужный тариф и нажмите кнопку &quot;Подать заявку&quot;"
                    android:id="@+id/textView49"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/myGreen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Для подачи заявки на счету должно быть достаточно средств"
                    android:id="@+id/textView80"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ваш баланс:"
                    android:id="@+id/textView77"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/txtBalance"
                    android:textStyle="bold"
                    android:paddingLeft="5dp" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView4" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Название"
                            android:id="@+id/textView84"
                            android:textStyle="bold"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="тарифа"
                            android:id="@+id/textView97"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="5dp" />

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RadioButton android:id="@+id/radio_Star20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Star20"
                                android:textStyle="italic"
                                android:textColor="@color/myGreen" />
                            <RadioButton android:id="@+id/radio_Star40"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Star40"
                                android:textStyle="italic"
                                android:textColor="@color/myGreen" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Star70"
                                android:id="@+id/radio_Star70"
                                android:textStyle="italic"
                                android:textColor="@color/myGreen" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Star100"
                                android:id="@+id/radio_Star100"
                                android:textStyle="italic"
                                android:textColor="@color/myGreen" />
                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingRight="3dp"
                        android:paddingLeft="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Стоимость,"
                            android:id="@+id/textView85"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="грн/месяц"
                            android:id="@+id/textView98"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70"
                            android:id="@+id/textView82"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80"
                            android:id="@+id/textView88"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:id="@+id/textView91"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="140"
                            android:id="@+id/textView94"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Стоимость"
                            android:id="@+id/textView86"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="перехода (разово)"
                            android:id="@+id/textView99"
                            android:textStyle="bold"
                            android:layout_gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0,00"
                            android:id="@+id/textView96"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0,00"
                            android:id="@+id/textView89"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0,00"
                            android:id="@+id/textView92"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0,00"
                            android:id="@+id/textView95"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Будьте внимательны. Все действия логируются"
                android:id="@+id/txtInfo"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подать заявку"
                android:id="@+id/btnNext"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>