    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgTicket"
            android:layout_column="0"
            android:src="@drawable/help_white"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Создание нового тикета"
            android:id="@+id/textView4"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold" />
    </LinearLayout>


        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Постарайтесь максимально точно определить раздел"
                android:id="@+id/textView7"
                android:textColor="#fe0101"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Правильный выбор ускорит ответ"
                android:id="@+id/textView25"
                android:paddingBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выберите раздел:"
                android:id="@+id/textView34"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontalScrollView6" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:paddingBottom="10dp">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <RadioButton
                                android:id="@+id/radio_finance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Финансовые вопросы"
                                android:textStyle="italic" />

                            <RadioButton
                                android:id="@+id/radio_tehnical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Технические вопросы"
                                android:textStyle="italic" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Другие жалобы"
                                android:id="@+id/radio_other"
                                android:textStyle="italic" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Пожелания и предложения"
                                android:id="@+id/radio_offers"
                                android:textStyle="italic" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Расторжение договора"
                                android:id="@+id/radio_dogovor" />
                        </RadioGroup>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Далее >>"
                            android:id="@+id/btnType"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Подсказка! Как правильно выбрать раздел?"
                android:id="@+id/textView38"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если Ваш вопрос касается денег смело выбирайте Финансовые вопросы."
                android:id="@+id/textView39"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если у Вас чтото плохо работает или должно работать лучше выбирайте Технические вопросы."
                android:id="@+id/textView40"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если у Вас есть жалоба не технического и не финансового характера, то выбирайте Другие жалобы"
                android:id="@+id/textView90"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если Вы знаете как улучшить качество предоставляемых нами услуг, выбирайте Пожелания и предложения"
                android:id="@+id/textView93"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Если Вы расторгнуть договор, выбирайте Расторжение договора"
                android:id="@+id/textView129"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="В остальных случаях выбирайте раздел пользуясь логикой."
                android:id="@+id/textView196" />

        </LinearLayout>
    </ScrollView>

    </LinearLayout>